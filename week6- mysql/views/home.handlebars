{{!--------------------------------------------------------------------------
**  Description:  Hendlebars server side rendering file for main page of
**                the application
----------------------------------------------------------------------------}}

<link rel="stylesheet" type="text/css" href="/css/style.css">

{{!-- Input record form --}}
<form id="recordForm" action="/insert">
    <fieldset>

        <legend>Use this form to record your weightlifting statistics</legend>

        <label for="exerciseName">Name</label>
        <input type="text" name="exerciseName" id="exerciseName"><br>

        <label for="reps">Reps</label>
        <input type="number" name="reps" id="reps"><br>

        <label for="weight">Weight</label>
        <input type="number" name="weight" id="weight"><br>

        <label for="date">Date</label>
        <input type="date" name="date" id="date"><br>

        <label for="lbs">lbs</label>
        <input type="radio" name="lbs" value="1" id="lbs" checked>

        <label for="kgs">kgs</label>
        <input type="radio" name="lbs" value="0"><br>

        <input type="submit" id="submit" value="Store this record">

    </fieldset>
</form>

<h1>Weightlifting Table</h1>
<table id="recordTable">
    <tr>
        <th class='hideId'> ID
        <th> Exercise</th>
        <th> Reps</th>
        <th> Weight</th>
        <th> lbs / kgs</th>
        <th> Date</th>
        <th> Edit</th>
        <th> Delete</th>
    </tr>
    {{#each workouts}}

    {{!-- Record table results --}}
    <tr>
        <td class='hideId'>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.reps}}</td>
        <td>{{this.weight}}</td>
        {{#if this.lbs}}
        <td>lbs</td>
        {{else}}
        <td>kgs</td>
        {{/if}}
        <td>{{this.date}}</td>

        {{!-- Edit and delete buttons --}}
        <td> <a href="/updateWorkout?id={{this.id}}"> <input type="button" value="Edit"> </a> </td>
        <td> <input type="button" value="Delete" onclick="deleteExercise('recordTable',this,{{this.id}})"> </td>
    </tr>
    {{/each}}
</table>

<script src="/js/client.js"></script>